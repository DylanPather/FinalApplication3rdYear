@model IEnumerable<APPDEVInc2.DataBaseModels.RequestAssistanceTbl>

@{
    ViewBag.Title = "Current Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />

<h2>Your Current Request</h2>
<style>
    body {
        background-image: url(https://img.rawpixel.com/s3fs-private/rawpixel_images/website_content/rm175-adj-15.jpg?bg=transparent&con=3&cs=srgb&dpr=1&fm=jpg&ixlib=php-3.1.0&q=65&usm=15&vib=3&w=1000&s=f48fac4bfc805097f0b54f3f9e8f7e6b);
        background-size: cover;
        display: grid;
        align-items: center;
        justify-items: center;
        font-family: 'Lato', sans-serif;
        color: black;
    }

    table.cinereousTable {
        border: 6px solid #948473;
        background-color: #FFE3C6;
        width: 100%;
        text-align: center;
    }

        table.cinereousTable td, table.cinereousTable th {
            border: 1px solid #000000;
            padding: 4px 4px;
        }

        table.cinereousTable tbody td {
            font-size: 17px;
            color: #000000;
        }

        table.cinereousTable thead {
            background: #919494;
            background: -moz-linear-gradient(top, #acafaf 0%, #9c9e9e 66%, #919494 100%);
            background: -webkit-linear-gradient(top, #acafaf 0%, #9c9e9e 66%, #919494 100%);
            background: linear-gradient(to bottom, #acafaf 0%, #9c9e9e 66%, #919494 100%);
            border-bottom: 3px solid #444444;
        }

            table.cinereousTable thead th {
                font-size: 24px;
                font-weight: bold;
                color: #FFF8F8;
                text-align: center;
                border-left: 2px solid #414141;
            }

                table.cinereousTable thead th:first-child {
                    border-left: none;
                }

        table.cinereousTable tfoot td {
            font-size: 16px;
        }
</style>

<table class="cinereousTable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RequestAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequestDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>

        <th>
            Estimate Wait Time
        </th>

        <th>
            Action
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RequestAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalTime)
            </td>

            @if (item.Status == "Assigned" || item.Status == "En-Route")
            {
                <td>
                    @Html.ActionLink("View Details", "ViewRequestDetail", new { id = item.RequestID })



                </td>
            }
            @if (item.Status == "Pending")
            {
                <td>
                    @Html.ActionLink("Cancel Request", "CancelRequest", new { id = item.RequestID })
                </td>
            }


        </tr>
    }

</table>

<div>
    <h4><strong>Estimated Route Mechanic Could Use.</strong></h4>
    <iframe width="800"
            height="480"
            frameborder="0" style="position : relative; left : 15%;"
            src=@ViewBag.StringLocation allowfullscreen></iframe>
</div>