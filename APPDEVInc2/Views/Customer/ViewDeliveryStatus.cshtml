@model IEnumerable<APPDEVInc2.DataBaseModels.PayFastShipping>

@{
    ViewBag.Title = "Your Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />

<h2>Your Current Delivery Progress</h2>
<style>
    body {
        background-image: url(https://img.rawpixel.com/s3fs-private/rawpixel_images/website_content/rm175-adj-15.jpg?bg=transparent&con=3&cs=srgb&dpr=1&fm=jpg&ixlib=php-3.1.0&q=65&usm=15&vib=3&w=1000&s=f48fac4bfc805097f0b54f3f9e8f7e6b);
        background-size: cover;
        display: grid;
        align-items: center;
        justify-items: center;
        font-family: 'Lato', sans-serif;
        color: black;
    }

    table.cinereousTable {
        border: 6px solid #948473;
        background-color: #5de4f0;
        width: 100%;
        text-align: center;
    }

        table.cinereousTable td, table.cinereousTable th {
            border: 1px solid #000000;
            padding: 4px 4px;
        }

        table.cinereousTable tbody td {
            font-size: 17px;
            color: #000000;
        }

        table.cinereousTable thead {
            background: #919494;
            background: -moz-linear-gradient(top, #acafaf 0%, #9c9e9e 66%, #919494 100%);
            background: -webkit-linear-gradient(top, #acafaf 0%, #9c9e9e 66%, #919494 100%);
            background: linear-gradient(to bottom, #acafaf 0%, #9c9e9e 66%, #919494 100%);
            border-bottom: 3px solid #444444;
        }

            table.cinereousTable thead th {
                font-size: 24px;
                font-weight: bold;
                color: #FFF8F8;
                text-align: center;
                border-left: 2px solid #414141;
            }

                table.cinereousTable thead th:first-child {
                    border-left: none;
                }

        table.cinereousTable tfoot td {
            font-size: 16px;
        }
</style>

<table class="cinereousTable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PayFastShippingID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Drivers.VehicleMake)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Drivers.VehicleRegNo)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsPickedUp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTimePickedUp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTimeEnRoute)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Is_Delivered)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Is_Delivered)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PayFastShippingID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Drivers.VehicleMake)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Drivers.VehicleRegNo)
            </td>

            <td>

                @Html.DisplayFor(modelItem => item.Status)

            </td>
            <td>
                @if (item.IsPickedUp)
                {
                    <i class="fas fa-check"></i>
                }
                else
                {
                    <i class="fas fa-times"></i>
                }


            </td>
            <td>

                @Html.DisplayFor(modelItem => item.DateTimePickedUp)

            </td>
            <td>

                @Html.DisplayFor(modelItem => item.DateTimeEnRoute)

            </td>
            <td>
                @if (item.Is_Delivered)
                {
                    <i class="fas fa-check"></i>
                }
                else
                {
                    <i class="fas fa-times"></i>
                }

            </td>
            <td>

                @Html.DisplayFor(modelItem => item.DateTimeDelivered)

            </td>

        </tr>


    }

</table>
<div>
    @foreach (var x in Model)
    {
        if (x.Status == "Pending Dispatch")
        {
            <img src="~/Images/DeliveryStatus/OrderNotCollected.PNG" style="width:1135px;height:350px" />
        }
        if (x.Status == "En-Route")
        {
            <img src="~/Images/DeliveryStatus/OrderEnRoute.PNG" style="width:1135px;height:350px" />
        }
        if (x.Status == "Collected")
        {
            <img src="~/Images/DeliveryStatus/OrderCollected.PNG" style="width:1135px;height:350px" />
        }
        if (x.Status == "Complete")
        {
            <img src="~/Images/DeliveryStatus/OrderReceived.PNG" style="width:1135px;height:350px" />
        }
    }
</div>
