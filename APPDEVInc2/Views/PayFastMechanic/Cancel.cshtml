@{
    ViewBag.Title = " Payment Unsuccessful";
}

<head>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap" rel="stylesheet">
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
    <script src="https://www.rawpixel.com/image/2681485/free-illustration-vector-abstract-abstract-background-abstract-pattern"></script>
</head>
<style>
    body {
        background: url("https://cdn.dribbble.com/users/1003944/screenshots/12129706/media/2b3c8c6e9f9da4f4bb5fcc74fa482765.gif") center center no-repeat fixed;
        background-size: cover;
        display: grid;
        align-items: center;
        justify-items: center;
        font-size: 18px;
        font-family: 'Lato', sans-serif;
    }

    h2 {
        color: red;
        font-family: Arial;
        font-weight: 700;
        font-size: 26px;
        margin-bottom: 10px;
    }

    p {
        color: #000000;
        font-family: 'Lato', sans-serif;
        font-size: 18px;
        margin: 0;
    }

    i {
        color: red;
        font-size: 100px;
        line-height: 200px;
        margin-left: -15px;
    }

    .card {
        position: center;
        background-color: white;
        max-width: 90%;
        margin: 93px auto 46px;
        padding: 60px 80px 60px 80px;
        text-align: center;
        box-shadow: 0 0 20px 0 rgba(0,0,0,0.2);
        border-top: 10px solid;
        border-top-color: red;
    }

    a {
        color: red;
    }

        a:hover {
            font-size: 19px;
        }

    .RedError {
        width: 300px;
        height: 300px;
    }
</style>
<body>
    <div class="card">
        <img class="RedError" src="~/Images/Cancel or Decline Payment.svg" />
        <br />
        <h2>Payment Unsuccessful</h2>
        <p>We were unable to process your payment,<br />your payment was either declined or cancelled</p>
        <br />
        <div style="font-family:'Lato', sans-serif; font-size:18px">
            @Html.ActionLink("Return", "Index","Home")
        </div>
    </div>
</body>
