@model APPDEVInc2.DataBaseModels.ToolBoxToolDetail

@{
    ViewBag.Title = "AddToolToToolBox";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@{ List<SelectListItem> data = ViewBag.ToolsList; }
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Add Tool To Toolbox</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        @Html.LabelFor(model => model.ToolID, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.ToolID, data, "---Select---", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ToolID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back To Toolboxes", "ViewToolBoxes")
</div>
