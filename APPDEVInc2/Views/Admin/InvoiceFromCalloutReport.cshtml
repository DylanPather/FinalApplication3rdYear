@model IEnumerable<APPDEVInc2.DataBaseModels.CalloutReportDetailTbl>


@{
    ViewData["Title"] = "Report To Invoice|";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br />
<br />
<br />
<br />
<br />

<form method="post">

    <br />
    @{
        decimal total = 0;
    }

    <div class="backgroundWhiteBorder">
        <div class="container">
            <div class="card-header bg-dark text-light ml-0 row container">
                <div class="col-6">
                    <i class="fa fa-shopping-cart"></i> &nbsp;
                    Invoice Report Summary For Callout
                </div>

            </div>
            <div class="card-body">
                @foreach (var item in Model)
                {



                    <div class="row">

                       

                            <div class="col-12 text-sm-center col-lg-5 text-lg-left">
                                <h4><strong>@item.CalloutServices.Name</strong></h4>
                                <h4><small>@item.CalloutServices.Description</small></h4>
                               
                            </div>
                            <div class="col-12 text-sm-center col-lg-5 text-lg-right row">
                                <div class="col-4 text-md-right" style="padding-top:5px;">
                                    <h5><strong>R @item.CalloutServices.Price <span class="text-muted">x</span>@item.Quantity </strong></h5>
                                </div>
                                <div class="col-8 text-md-right" style="padding-top:5px;">
                                    <h5><strong>Total: R @(item.CalloutServices.Price * item.Quantity) </strong></h5>
                                </div>

                            </div>

                        

                    </div>
                    <hr />
                    total += (decimal)(item.Price * item.Quantity);
                }
                <h4><strong>Total Invoice Total: R @total</strong></h4>

            </div>

        </div>


    </div>


    <a class="btn btn-danger" href=@Url.Action("ViewCalloutReports", "Admin") style="background-color: #e5280f;
        color: black;
        font-size: 18px;
        font-family: 'Lato', sans-serif;
        font-weight: bold;
        border-color: #9be50f;
        text-align: center;
        justify-content: center;
        width: 148px;">Go Back</a>
    <a class="btn btn-danger" href=@Url.Action("SendCalloutInvoice", "Admin") style="background-color: #0bfc03;
        color: black;
        font-size: 18px;
        font-family: 'Lato', sans-serif;
        font-weight: bold;
        border-color: #9be50f;
        text-align: center;
        justify-content: center;
        width: 240px;">Send Invoice To Mechanic</a>

</form>