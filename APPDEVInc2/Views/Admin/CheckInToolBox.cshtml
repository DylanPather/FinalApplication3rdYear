@model IEnumerable<APPDEVInc2.DataBaseModels.ToolsCheckInCart>

@{ ViewBag.Title = "Check In Tools";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }

<link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap" rel="stylesheet">
<script src='https://kit.fontawesome.com/a076d05399.js'></script>

<style>
    tbody {
        font-family: 'Lato', sans-serif;
        font-size: 18px;
        color: black;
        padding-top: 5px;
    }

    body {
        background-color: #cccaca;
    }

    .fas fa-list-alt {
        color: black;
        text-align: left;
        justify-content: left;
    }

    .CategroyPageHeading {
        color: #1c8219;
        text-align: center;
        justify-content: center;
        font-family: Arial;
        font-size: 21px;
        font-weight: bold;
    }

    th {
        background-color: white;
        font-size: 16px;
        font-family: 'Lato', sans-serif;
        color: #0771ab;
        text-transform: uppercase;
        letter-spacing: 0.03em;
        font-weight: bold;
    }

    .breadcrumb {
        border-radius: 10px;
        background-color: white;
        box-shadow: 0px 0 6px 0 #545454;
        font-size: 18px;
    }

    .card {
        border: 2px;
        border-color: white;
        box-shadow: 0px 0 6px 0 #000000;
    }

    .card-header {
        background-color: white;
        border-radius: 20px;
    }

    ol li a {
        color: #ff007d;
    }

    .editlabel a {
        font-size: 18px;
        font-family: 'Lato', sans-serif;
        color: black;
    }

    .table-responsive {
        border-radius: 5px 5px 5px 5px;
    }

    .pagination {
        background-color: white;
        color: black;
        font-size: 18px;
        border-color: white;
    }

    .fa .fa-plus {
        color: #ffd800;
    }

    .pageheader {
        font-family: 'Abril Fatface', cursive;
        font-size: 27px;
        color: black;
        text-align: center;
        justify-content: center;
    }

    .AdminCategories {
        width: 25%;
        height: 21%;
    }

    tr:nth-child(odd) {
        background-color: #d1eaea;
    }
</style>

<h2 class="pageheader">Vees Tyre and Alignment</h2>
<br />
<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a style="font-weight:bold;" href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Check In Tools</li>

    </ol>
    @{  int calloutid = 0;
        var x = Model;}
    <div class="card mb-3">
        <div class="card-header">
            <br />
            <h2 class="CategroyPageHeading">CHECK IN TOOLS</h2>
            <img src="~/Images/ToolBox.png" class="AdminCategories pull-right" style="width:200px ;height:200px" />
        </div>


        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tool ID</th>
                            <th>Name</th>
                            <th>Brand</th>



                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            int count = 1;

                            calloutid = item.CalloutID;
                            <tr>
                                <td>@item.ToolID</td>
                                <td>@item.ToolsTbl.ToolName</td>
                                <td>@item.ToolsTbl.ToolBrand</td>





                                <td>

                                    @Html.ActionLink("Present", "MarkToolAsPresent", new { id = item.ToolID }) |
                                    @Html.ActionLink("Missing", "MarkToolAsMissing", new { id = item.ToolID }) |
                                    @Html.ActionLink("Damaged", "MarkToolAsDamaged", new { id = item.ToolID })

                                </td>

                            </tr>

                            count++;
                        }

                    </tbody>
                </table>
               
                
                    @if (Model.Count() == 0)
                    {
        <a class="btn btn-danger" href=@Url.Action("ProceedToToolComplete", "Admin", new { id = calloutid}) style="background-color: #0bfc03;
        color: black;
        font-size: 18px;
        font-family: 'Lato', sans-serif;
        font-weight: bold;
        border-color: #9be50f;
        text-align: center;
        justify-content: center;
        width: 240px;">Proceed</a>

                    }
                
            </div>

        </div>
    </div>
</div>