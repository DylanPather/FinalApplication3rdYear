@model APPDEVInc2.DataBaseModels.ScheduleTbl

@{
    ViewBag.Title = "Assign Mechanic";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@{ List<SelectListItem> data = ViewBag.MechanicList; }
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Select Mechanic:</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        @Html.LabelFor(model => model.MechanicID, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.MechanicID, data, "---Select---", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MechanicID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

