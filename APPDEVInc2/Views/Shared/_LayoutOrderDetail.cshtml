<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Vees Tyre and Alignment</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css2?family=Abril+Fatface&display=swap" rel="stylesheet">
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link href="~/Flexor/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/Flexor/css/colour-green.css" rel="stylesheet" />
    <link href="~/Flexor/css/colour-lavender.css" rel="stylesheet" />
    <link href="~/Flexor/css/colour-blue.css" rel="stylesheet" />
    <script src="~/Flexor/js/color-switcher.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>

    <link rel="icon" href="~/GoldPrideFavicon.png" />
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap" rel="stylesheet">
    <style>
        .navbar-brand {
            font-family: 'Abril Fatface', cursive;
            font-size: 25px;
            text-align: right;
            color: black;
            padding-top: 25px;
            padding-left: 40px;
        }

        .navbar-nav > li {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-left: 60px;
            padding-right: 30px;
            padding-bottom: 10px;
            padding-top: 10px;
            font-family: 'Lato', sans-serif;
            font-size: 17px;
            float: left;
            text-align: center;
            display: inline-block;
            position: center;
        }
        /* navbar color */

        .navbar-inverse {
            background-color: #fff;
            border-color: #fff;
        }
            /* navbar brand color */

            .navbar-inverse .navbar-brand {
                color: black;
                background-color: transparent;
                font-family: 'Abril Fatface', cursive;
                font-size: 21px;
            }
                /* navbar brand hover colour */

                .navbar-inverse .navbar-brand:hover,
                .navbar-inverse .navbar-brand:focus {
                    color: #c8a33c;
                    background-color: transparent;
                }

            .navbar-inverse .navbar-text {
                color: #000;
                font-family: 'Lato', sans-serif;
            }

            .navbar-inverse .navbar-nav > li > a {
                color: #000;
            }
                /* navbar links hover colour */
                .navbar-inverse .navbar-nav > li > a:hover,
                .navbar-inverse .navbar-nav > li > a:focus {
                    color: black;
                    background-color: #cfead8;
                }

            .navbar-inverse .navbar-nav > .active > a,
            .navbar-inverse .navbar-nav > .active > a:hover,
            .navbar-inverse .navbar-nav > .active > a:focus {
                color: #000;
                background-color: #d9e2c7;
            }

            .navbar-inverse .navbar-nav > .disabled > a,
            .navbar-inverse .navbar-nav > .disabled > a:hover,
            .navbar-inverse .navbar-nav > .disabled > a:focus {
                color: #444;
                background-color: transparent;
            }

            .navbar-inverse .navbar-nav > .open > a,
            .navbar-inverse .navbar-nav > .open > a:hover,
            .navbar-inverse .navbar-nav > .open > a:focus {
                color: #fff;
                background-color: #080808;
            }
    </style>

</head>
<body>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <div class="text-center">
            <footer>
                <p style="font-family: 'Lato', sans-serif; font-size: 16px; color: black;"> &copy; @DateTime.Now.Year - Vees Tyre and Alignment</p>
            </footer>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>